<div class="row">
  <div class="col-lg-3">
    <%= erb :'_setting_menu'%>
  </div>

  <div class="col-lg-9">
    <div class="row">
      <div class="col-lg-12 text-right">
        <form class="form-inline" enctype="multipart/form-data" method="post" action="/setting/attachments">
          <div class="form-group">
            <label for="exampleInputName2">文件</label>
            <input type="file" name="avatar[]" value="" class="form-control"  accept="" multiple>
          </div>
          <button type="submit" class="btn btn-default">上传</button>
        </form>
      </div>
    </div>
    <hr>

    <div class="row">
      <div class="col-lg-12">

        <table class="table table-striped">
          <thead>
            <tr>
              <th>标题</th>
              <th>文件类型</th>
              <th>文件地址</th>
              <th>上传时间</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% @attachments.each do |attachment| %>

            <tr>
              <td><%= attachment.ori_filename %></td>
              <td><%= attachment.content_type %></td>
              <td>/<%= attachment.url %></td>
              <td><%= attachment.created_at.strftime('%F %T') %></td>
              <td><a href="/setting/attachments/<%= attachment.id %>/delete" onclick="return confirm('确认删除吗 ?')"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 text-center">
        <%= will_paginate @attachments, renderer: BootstrapPagination::Sinatra %>
      </div>
    </div>
  </div>
</div>
