<div class="row">
  <div class="col-lg-3">
    <%= erb :'_setting_menu'%>
  </div>

  <div class="col-lg-9">
    <div class="row">
      <div class="col-lg-12 text-right">
        <form class="form-inline" enctype="multipart/form-data" method="post" action="/setting/images">
          <div class="form-group">
            <label for="exampleInputName2">照片</label>
            <input type="file" name="avatar[]" value="" class="form-control"  accept="image/png,image/gif,image/jpg,image/jpeg" multiple>
          </div>
          <button type="submit" class="btn btn-default">上传</button>
        </form>
      </div>
    </div>
    <hr>

    <div class="row">
      <% @images.each do |image| %>
        <div class="col-lg-4">
          <div class="panel panel-default">
            <img src="/<%= image.url %>" alt="..." class="img-rounded" width="100%">
            <div class="panel-footer">/<%= image.url %></div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-lg-12 text-center">
        <%= will_paginate @images, renderer: BootstrapPagination::Sinatra %>
      </div>

    </div>
  </div>
</div>
