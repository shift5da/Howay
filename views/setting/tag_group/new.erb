<div class="row">
  <div class="col-lg-3">
    <%= erb :'_setting_menu'%>
  </div>

  <div class="col-lg-9">
    <div class="panel panel-default">
      <div class="panel-heading">新建标签组</div>

      <div class="panel-body">
        <form class="form-horizontal" method="post" action="/setting/tag_groups/new" id='my_form'>
          <div class="form-group">
            <label for="inputName" class="col-sm-2 control-label">标签组名称</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputName" placeholder="标签组名称" name='name'>
            </div>
          </div>
          <div class="form-group">
            <label for="inputSeq" class="col-sm-2 control-label">序号</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputSeq" placeholder="序号" name='seq'>
            </div>
          </div>
        </form>
      </div>
      <div class="panel-footer">
        <a href="/setting/tag_groups" class="btn btn-default">取消</a>
        <a href="javascript:submit_form();" class="btn btn-primary">保存</a>
      </div>
    </div>

  </div>
</div>

<script type="text/javascript">

function submit_form() {
  $('#my_form').submit();
}

</script>
