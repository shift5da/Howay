<div class="row">
  <div class="col-lg-3">
    <%= erb :'_setting_menu'%>
  </div>

  <div class="col-lg-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-lg-6">
            标签组
          </div>
          <div class="col-lg-6 text-right">
            <a href="/setting/tag_groups/new" class="">新建</a>
          </div>
        </div>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th>名称</th>
            <th>序号</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @tag_groups.each do |tg| %>
          <tr>
            <td><%= tg.name %></td>
            <td><%= tg.seq %></td>
            <td>
              <a href="/setting/tag_groups/<%= tg.id %>/edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>&nbsp;
              <a href="/setting/tag_groups/<%= tg.id %>/destroy" onclick="return confirm('确认删除吗 ?')"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="panel-footer">
        <%= will_paginate @tag_groups, renderer: BootstrapPagination::Sinatra %>
      </div>
    </div>

  </div>
</div>
