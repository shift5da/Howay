<div class="row">
  <div class="col-lg-3">
    <%= erb :'_setting_menu'%>
  </div>

  <div class="col-lg-9">
    <div class="panel panel-default">
      <div class="panel-heading">新建标签</div>

      <div class="panel-body">
        <form class="form-horizontal" method="post" action="/setting/tags/new" id='my_form'>
          <div class="form-group">
            <label for="inputTagName" class="col-sm-2 control-label">标签名称</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputTagName" placeholder="标签名称" name='tagName'>
            </div>
          </div>
          <div class="form-group">
            <label for="selectTags" class="col-sm-2 control-label">标签</label>
            <div class="col-sm-10">
              <select id="selectTags" name="tagGroupID" class='form-control'>
                <% @tag_groups.each do |tg| %>
                  <option value="<%= tg.id %>"><%= tg.name %></option>
                <% end %>
              </select>
            </div>
          </div>
        </form>
      </div>
      <div class="panel-footer">
        <a href="/setting/tags" class="btn btn-default">取消</a>
        <a href="javascript:submit_form();" class="btn btn-primary">保存</a>
      </div>
    </div>

  </div>
</div>

<script type="text/javascript">

function submit_form() {
  $('#my_form').submit();
}

</script>
