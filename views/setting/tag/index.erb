<div class="row">
  <div class="col-lg-3">
    <%= erb :'_setting_menu'%>
  </div>

  <div class="col-lg-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-lg-6">
            标签列表
          </div>
          <div class="col-lg-6 text-right">
            <a href="/setting/tags/new" class="">新建</a>
          </div>
        </div>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th>名称</th>
            <th>所在标签组</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @tags.each do |tag| %>
          <tr>
            <td><%= tag.id %></td>
            <td><%= tag.name %></td>
            <td><%= tag.tag_group.name if tag.tag_group %></td>
            <td>
              <a href="/setting/tags/<%= tag.id %>/edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>&nbsp;
              <a href="/setting/tags/<%= tag.id %>/destroy" onclick="return confirm('确认删除吗 ?')"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="panel-footer">
        <%= will_paginate @tags, renderer: BootstrapPagination::Sinatra %>
      </div>
    </div>

  </div>
</div>
