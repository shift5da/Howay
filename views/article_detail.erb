

<div class="article">

  <div class="header">
    <h3><%= @article.title %></h3>
    <span><%= @article.updated_at.strftime('%F %T') %></span>
    <span class="glyphicon glyphicon-tag" aria-hidden="true"></span>
    <% @article.tags.each do |tag| %>
      <a href="#"><%= tag.name %></a>
    <% end %>
    <hr>
  </div>

  <div class="body">
    <%= @article.content %>
  </div>

  <div class="footer">

  </div>

</div>
